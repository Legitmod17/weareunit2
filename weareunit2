#include <iostream>
#include <string>
using namespace std;

int main() {
	setlocale(0, "");
	int choice;
	cout << "Выберите время года:\n";
	cout << "1. Лето\n";
	cout << "2. Зима\n";
	cout << "3. Весна\n";
	cout << "4. Осень\n";
	cin >> choice;
	if (choice = 1) {
		cout << "Наступило лето,оденься потеплее";
	}
	if (choice = 2) {
	cout << "Наступила зима, одень куртку потеплее";
	}
}
